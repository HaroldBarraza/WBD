

<div>
 <%- include('../partials/head') %>
<%- include('../partials/header') %>
<%- include('../partials/navigation') %>
  <h1><%= title %></h1>

  <% if (messages.error) { %>
    <div class="alert alert-danger">
      <%= messages.error %>
    </div>
  <% } %>

  <% if (messages.notice) { %>
    <div class="alert alert-success">
      <%= messages.notice %>
    </div>
  <% } %>

  <!-- Formulario de Actualización de Cuenta -->
  <section>
    <h2>Account Update</h2>
    <form action="/account/update" method="POST">
      <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

      <div class="form-group">
        <label for="account_firstname">First Name</label>
        <input type="text" id="account_firstname" name="account_firstname" 
               value="<%= accountData.account_firstname || '' %>" required class="form-control">
      </div>
      <div class="form-group">
        <label for="account_lastname">Last Name</label>
        <input type="text" id="account_lastname" name="account_lastname" 
               value="<%= accountData.account_lastname || '' %>" required class="form-control">
      </div>
      <div class="form-group">
        <label for="account_email">Email</label>
        <input type="email" id="account_email" name="account_email" 
               value="<%= accountData.account_email || '' %>" required class="form-control">
      </div>
      <button type="submit" class="btn btn-primary">Update Account</button>
    </form>
  </section>

  <!-- Formulario de Cambio de Contraseña -->
  <section>
    <h2>Change Password</h2>
    <form action="/account/change-password" method="POST">
      <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

      <div class="form-group">
        <label for="new_password">New Password</label>
        <input type="password" id="new_password" name="new_password" required class="form-control">
        <small class="form-text text-muted">
          Enter a new password. It must be at least 12 characters long and include uppercase, lowercase, numbers, and symbols.
        </small>
      </div>
      <div class="form-group">
        <label for="confirm_password">Confirm New Password</label>
        <input type="password" id="confirm_password" name="confirm_password" required class="form-control">
      </div>
      <button type="submit" class="btn btn-primary">Change Password</button>
    </form>
  </section>
  <%- include('../partials/footer') %>
</div>

