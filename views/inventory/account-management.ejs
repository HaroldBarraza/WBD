<%- include('../partials/header') %>
<%- include('../partials/navigation') %>

<main>
  <h1><%= title %></h1>

  <% if (accountData) { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>

    <!-- Enlace para actualizar la informaciÃ³n de la cuenta -->
    <p><a href="/account/update/<%= accountData.account_id %>">Update Account Information</a></p>

    <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv/">Access Inventory Management</a></p>
    <% } %>
  <% } else { %>
    <p>Please log in to view account management.</p>
  <% } %>
</main>

